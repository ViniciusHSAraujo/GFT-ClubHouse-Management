@{
    ViewData["Title"] = "CHM DashBoard";
}

@if (TempData["MSG_S"] != null) {
    <div class="alert bg-success alert-dismissible" role="alert">
        <em class="fa fa-lg fa-warning">&nbsp;</em>
        @TempData["MSG_S"]
        <a data-dismiss="alert" aria-label="Close" class="pull-right">
            <em class="fa fa-lg fa-close"></em>
        </a>
    </div>
}

<div class="row">
    <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
        <div class="panel panel-teal panel-widget border-right">
            <div class="row no-padding">
                <em class="fa fa-xl fa-building color-blue"></em>
                <div class="large">@ViewBag.CountClubHouses</div>
                <div class="text-muted">Total Club Houses Registered</div>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
        <div class="panel panel-blue panel-widget border-right">
            <div class="row no-padding">
                <em class="fa fa-xl fa-music color-orange"></em>
                <div class="large">@ViewBag.CountEvents</div>
                <div class="text-muted">Events this month</div>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
        <div class="panel panel-orange panel-widget border-right">
            <div class="row no-padding">
                <em class="fa fa-xl fa-users color-teal"></em>
                <div class="large">@ViewBag.CountUsers</div>
                <div class="text-muted">Users registered</div>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-md-3 col-lg-3 no-padding">
        <div class="panel panel-red panel-widget ">
            <div class="row no-padding">
                <em class="fa fa-xl fa-ticket color-red"></em>
                <div class="large">@ViewBag.CountTickets</div>
                <div class="text-muted">Tickets purchased this month</div>
            </div>
        </div>
    </div>
</div>